<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PlannedScheduleOnMapSample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:FootprintViewer.UI;assembly=FootprintViewer.UI"
		xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"             
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlannedScheduleOnMapSample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PlannedScheduleOnMapSample">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<views:UserMapControl MapSource="{Binding Map}"
						  Interactive="{Binding Interactive}"
						  State="{Binding State}"
						  HorizontalAlignment="Stretch"
						  VerticalAlignment="Stretch">
