<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PlannedScheduleViewerSample.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="150"
             x:Class="PlannedScheduleViewerSample.Views.TaskView"
			 x:DataType="vm:TaskViewModel">

	<Grid RowDefinitions="2*,1*">	
		<TextBlock Text="{Binding Name}"
				   FontSize="18"/>
		<TextBlock Text="{Binding Description}"
				   Grid.Row="1"
				   FontSize="12"/>
	</Grid>

</UserControl>
