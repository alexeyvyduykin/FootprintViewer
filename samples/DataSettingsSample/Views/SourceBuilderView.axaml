<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DataSettingsSample.ViewModels"
			 xmlns:vmd="using:DataSettingsSample.Designer"
             xmlns:views="using:DataSettingsSample.Views"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             x:DataType="vm:SourceBuilderViewModel"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
             x:Class="DataSettingsSample.Views.SourceBuilderView">
	
	<Design.DataContext>
		<vmd:DesignTimeSourceBuilderViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="*,Auto">
		<TextBlock>gfdfgfdgdfgdfgdf</TextBlock>
		<DockPanel Grid.Row="1" 
				   LastChildFill="True" 
				   HorizontalAlignment="Right"
				   Margin="8">
			<Button Content="Add" 
					Command="{Binding Add}"
					HorizontalAlignment="Right"/>
			<Button Content="Cancel" 
					Command="{Binding Cancel}"
					Margin="4,0,0,0" 
					HorizontalAlignment="Right"/>
		</DockPanel>
		
	</Grid>
	
</UserControl>
