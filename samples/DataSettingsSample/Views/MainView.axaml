<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DataSettingsSample.ViewModels"
             xmlns:views="using:DataSettingsSample.Views"
             xmlns:dialogHost="clr-namespace:DialogHost;assembly=DialogHost.Avalonia"
			 x:DataType="vm:MainWindowViewModel"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DataSettingsSample.Views.MainView">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<dialogHost:DialogHost Identifier="PrimaryDialogHost">

		<dialogHost:DialogHost.DataTemplates>
			<DataTemplate DataType="vm:SettingsViewModel">
				<views:SettingsView DataContext="{Binding}"/>
			</DataTemplate>
		</dialogHost:DialogHost.DataTemplates>

		<StackPanel Spacing="20"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">

			<Button x:Name="ButtonSettings"
					Content="Settings"/>

			<Button Content="OpenDialog"
					Click="OpenedDialog"/>

		</StackPanel>

	</dialogHost:DialogHost>

</UserControl>
