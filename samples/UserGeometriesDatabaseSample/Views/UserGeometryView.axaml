<UserControl x:Class="UserGeometriesDatabaseSample.Views.UserGeometryView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"                                      
             xmlns:vmd="clr-namespace:UserGeometriesDatabaseSample.Designer"                        
             mc:Ignorable="d">
  
  <Design.DataContext>
    <vmd:DesignTimeUserGeometry/>
  </Design.DataContext>

  <Border Padding="8,4">
    <StackPanel>
      <TextBlock x:Name="UserGeometryTextBlock"/>  
    </StackPanel>
  </Border>
  
</UserControl>
