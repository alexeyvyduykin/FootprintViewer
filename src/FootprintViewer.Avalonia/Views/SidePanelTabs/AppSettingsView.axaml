<UserControl x:Class="FootprintViewer.Avalonia.Views.SidePanelTabs.AppSettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmd="clr-namespace:FootprintViewer.Designer;assembly=FootprintViewer"
			 xmlns:vm="clr-namespace:FootprintViewer.ViewModels;assembly=FootprintViewer"
             xmlns:loc="clr-namespace:FootprintViewer.Localization;assembly=FootprintViewer"
             xmlns:controls="clr-namespace:FootprintViewer.Avalonia.Controls"
             xmlns:prop="using:FootprintViewer.Avalonia.Properties"
             xmlns:settings="clr-namespace:FootprintViewer.Avalonia.Views.Settings"
             xmlns:tabs="clr-namespace:FootprintViewer.Avalonia.Views.SidePanelTabs"
             mc:Ignorable="d"
             d:DesignWidth="380" d:DesignHeight="850">

	<Design.DataContext>
		<vmd:DesignTimeSettingsTab/>
	</Design.DataContext>

	<UserControl.Resources>
		<DataTemplate x:Key="languageTemplate" DataType="vm:LanguageViewModel">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding NativeName, StringFormat={} ({0}}"
						   Classes="Caption" VerticalAlignment="Center"/>
				<TextBlock Text="{Binding Code, StringFormat={}\, {0})}"
						   Classes="Caption" VerticalAlignment="Center"/>
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>

	<UserControl.Styles>
		<Style Selector="Expander">
			<Setter Property="ClipToBounds" Value="False"/>
			<Setter Property="ExpandDirection" Value="Down"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			<Setter Property="VerticalContentAlignment" Value="Stretch"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="ContentTransition">
				<Setter.Value>
					<CrossFade Duration="0.25" />
				</Setter.Value>
			</Setter>
		</Style>

		<Style Selector="RadioButton">
			<Setter Property="GroupName" Value="a1"></Setter>
			<Setter Property="Padding" Value="8"></Setter>
			<Setter Property="Margin" Value="8,4"></Setter>
		</Style>

		<Style Selector="ContentControl">
			<Setter Property="controls:AccordionStackPanel.IsExpanded"
					Value="{Binding IsVisible, Mode=TwoWay}"/>
		</Style>
	</UserControl.Styles>

	<controls:AccordionStackPanel>

		<ContentControl Padding="8">
			<Expander Header="{x:Static prop:Resources.SettingsProviders}"
					  IsExpanded="{Binding $parent[ContentControl].(controls:AccordionStackPanel.IsExpanded), Mode=TwoWay}">

				<ScrollViewer HorizontalScrollBarVisibility="Hidden"
							  VerticalScrollBarVisibility="Auto">
					<ItemsControl Items="{Binding Providers}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<settings:ProviderSettingsView Margin="8" DataContext="{Binding}"/>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>
			</Expander>
		</ContentControl>

		<ContentControl Padding="8,0,8,8">
			<Expander x:Name="LanguageExpander"
					  Header="{x:Static prop:Resources.SettingsLanguages}"
					  IsExpanded="{Binding $parent[ContentControl].(controls:AccordionStackPanel.IsExpanded), Mode=TwoWay}">

				<StackPanel>

					<RadioButton x:Name="RadioButton1">
						<StackPanel Orientation="Horizontal">
							<TextBlock x:Name="LanguageTextBlock1"
									   Classes="Body1"
									   VerticalAlignment="Center"/>
							<ContentControl Content="{Binding LanguageSettings.Languages[0]}"
											ContentTemplate="{StaticResource languageTemplate}"/>
						</StackPanel>
					</RadioButton>

					<RadioButton x:Name="RadioButton2">
						<StackPanel Orientation="Horizontal">
							<TextBlock x:Name="LanguageTextBlock2"
									   Classes="Body1"
									   VerticalAlignment="Center"/>
							<ContentControl Content="{Binding LanguageSettings.Languages[1]}"
											ContentTemplate="{StaticResource languageTemplate}"/>
						</StackPanel>
					</RadioButton>

				</StackPanel>
			</Expander>
		</ContentControl>

	</controls:AccordionStackPanel>

</UserControl>
