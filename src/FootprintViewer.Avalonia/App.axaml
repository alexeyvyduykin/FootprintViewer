    <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
    
    <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"/>
    
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Icons.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Styles/FastToolTip.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Styles/SearchToggleButton.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Styles/ToolBarIconSelector.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Controls/Flyout.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Controls/SidePanelItem.axaml"/>
    <StyleInclude Source="avares://FootprintViewer.Avalonia/Controls/SidePanel.axaml"/>

  </Application.Styles>
  
</Application>
