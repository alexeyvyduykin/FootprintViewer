<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:vmd="clr-namespace:FootprintViewer.Fluent.Designer"
             xmlns:prop="using:FootprintViewer.Fluent.Properties"
			 mc:Ignorable="d"
			 d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FootprintViewer.Fluent.Views.InfoPanel.GroundTargetClickInfoPanelView"
			 d:DataContext="{x:Static vmd:DesignData.GroundTargetClickInfoPanel}">

	<Panel VerticalAlignment="Center"
		   HorizontalAlignment="Center">
		<styles:Card Opacity="0.85">
			<StackPanel Margin="4" Spacing="4">

				<TextBlock Text="{Binding GroundTargetViewModel.Name}" Classes="Headline6"/>

				<StackPanel>
					<TextBlock Text="{x:Static prop:Resources.InfoPanelType}" Classes="Overline"/>
					<TextBlock Text="{Binding GroundTargetViewModel.Type}" Classes="Subtitle1"/>
				</StackPanel>

			</StackPanel>
		</styles:Card>
	</Panel>

</UserControl>
