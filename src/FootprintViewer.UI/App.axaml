<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:FootprintViewer.UI"
             xmlns:vm="using:FootprintViewer.UI.ViewModels"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 x:DataType="vm:ApplicationViewModel"
             x:Class="FootprintViewer.UI.App"
			 RequestedThemeVariant="Dark">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<MergeResourceInclude Source="/Themes/Base.axaml"/>
				<MergeResourceInclude Source="/Themes/Themes.axaml"/>
				<MergeResourceInclude Source="/Themes/Icons.axaml"/>
				<MergeResourceInclude Source="/Themes/IconDataTemplates.axaml"/>		
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.Styles>
		<FluentTheme/>
		<materialIcons:MaterialIconStyles />
		
		<StyleInclude Source="/Themes/FontSizes.axaml"/>
		<StyleInclude Source="/Themes/Border.axaml"/>
		<StyleInclude Source="/Themes/TextBox.axaml"/>
		<StyleInclude Source="/Themes/Button.axaml"/>
					
		<StyleInclude Source="/Themes/ToggleButton.axaml"/>
		<StyleInclude Source="/Themes/CheckBox.axaml"/>
		<StyleInclude Source="/Themes/ComboBox.axaml"/>
		<StyleInclude Source="/Themes/ToggleSwitch.axaml"/>
		<StyleInclude Source="/Themes/Slider.axaml"/>
		<StyleInclude Source="/Themes/ListBox.axaml"/>

		<StyleInclude Source="/Controls/TextValue.axaml"/>
		<StyleInclude Source="/Controls/ContentArea.axaml"/>
		<StyleInclude Source="/Controls/Dialog.axaml"/>
		<StyleInclude Source="/Controls/RangeSlider.axaml"/>

		<StyleInclude Source="/Themes/ToolTip.axaml"/>
		<StyleInclude Source="/Controls/SidePanelItem.axaml"/>
		<StyleInclude Source="/Controls/SidePanel.axaml"/>
		<StyleInclude Source="/Controls/FilterToggleButton.axaml"/>
	<!--
		<StyleInclude Source="avares://TimeDataViewerLite/Styles/Styles.axaml"/>-->

	</Application.Styles>

</Application>
